<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="7dp" >

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100" >

            <TextView
                android:id="@+id/tv_table_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />
            
           <!--  <CheckBox
                android:id="@+id/chk_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:visibility="visible"
                 /> -->

            <TextView
                android:id="@+id/tv_size_list"
                style="@style/italictext_product_list"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="100GMS"/>
            
              <TextView
                android:id="@+id/tv_product_list"
                style="@style/italictext_product_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_weight="80"
                android:layout_marginLeft="5dp"
                android:gravity="left"
                android:text="COLOR"
                android:textColor="#FFFFFF"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_price_list"
                style="@style/italictext_product_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="right"
                 android:textColor="#FFFFFF"
                android:visibility="gone" />
            
              <TextView
                android:id="@+id/tv_shade_list"
                style="@style/italictext_product_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="right"
                 android:textColor="#FFFFFF"
                 />

            <TextView
                android:id="@+id/tv_eancode_list"
                style="@style/italictext_product_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="right"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_category_list"
                style="@style/italictext_product_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="right" 
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_db_id_list"
                style="@style/italictext_product_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </TableRow>
    </TableLayout>

</LinearLayout>
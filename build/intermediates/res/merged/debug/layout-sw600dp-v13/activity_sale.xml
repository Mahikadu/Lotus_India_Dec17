<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#0b5571"
    android:orientation="vertical" >

    <include
        android:id="@+id/include_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/headernew" />

    <LinearLayout
        android:id="@+id/ll_spinerlayout"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_below="@+id/include_header"
        android:orientation="vertical" >

        <TableLayout
            android:id="@+id/tl_spinerlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp" >
            
           <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SALE"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                      android:typeface="serif"
        android:textStyle="italic"
                    android:gravity="center_horizontal"
                     />
            </TableRow> 

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/label_text"
                      android:typeface="serif"
        android:textStyle="italic"
                    android:text="Category" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <Spinner
                    android:id="@+id/sp_product_category"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                 	android:background="@drawable/dropdown"
                    android:prompt="@string/select_category" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                      style="@style/label_text"
                    android:text="Type"
                      android:typeface="serif"
        android:textStyle="italic" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Spinner
                    android:id="@+id/sp_product_type"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/dropdown"
                    android:prompt="@string/select_type" />
            </TableRow>
            
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" 
                android:visibility="gone">

                <RadioGroup
                    android:id="@+id/radioGroup1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/rb_old"
                        style="@style/label_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/radio"
                        android:text="Old Price" />

                    <RadioButton
                        android:id="@+id/rb_new"
                        style="@style/label_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/radio"
                        android:text="New Price" />
                </RadioGroup>

               
               
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" >

                <Spinner
                    android:id="@+id/sp_products"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:prompt="@string/select_product" />
            </TableRow>
            
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" >

                <Spinner
                    android:id="@+id/sp_price_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:prompt="@string/select_product" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" >

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:weightSum="100" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="15"
                    android:text="Size:" />

                <TextView
                    android:id="@+id/tv_product_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="85" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:weightSum="100" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="15"
                    android:text="Price" />

                <TextView
                    android:id="@+id/tv_product_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="85" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:visibility="gone" >

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="100" >
                
               <TextView
                    android:id="@+id/tv_shadeno"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8" />

                <TextView
                    android:id="@+id/tv_db_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8" />

                <TextView
                    android:id="@+id/tv_enacode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20" />

                <TextView
                    android:id="@+id/tv_category_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20" />

                <TextView
                    android:id="@+id/tv_previous_totalamount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="16" />

                <TextView
                    android:id="@+id/tv_previous_sold_items"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8" />

                <TextView
                    android:id="@+id/tv_previous_return_items"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8" />
                 
                 <TextView
                    android:id="@+id/tv_previous_return_non_salebale_items"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8" />
                 
                 
                 
                  <TextView
                    android:id="@+id/tv_previous_net_total_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8" />
                
            </TableRow>
        </TableLayout>

        <TableLayout
            android:id="@+id/Tablelisttages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#F7DCB4"
                android:padding="3dp"
                android:weightSum="100" >

                <TextView
                    style="@style/list_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="15"
                    android:text="SIZE" />

                <TextView
                    style="@style/list_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="15"
                    android:gravity="left"
                    android:text="PRODUCT" />

                <TextView
                    style="@style/list_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"
                    android:gravity="center_horizontal"
                    android:text="ENA" android:visibility="gone"/>

                <TextView
                    style="@style/list_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:gravity="right"
                    android:text="Shade No."
                    android:visibility="visible" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_product_list"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/ll_spinerlayout"
        android:divider="#F7DCB4"
        android:dividerHeight="1dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_proceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lv_product_list"
        android:background="@drawable/proceed"/>

</RelativeLayout>
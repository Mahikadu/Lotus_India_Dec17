<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:orientation="vertical">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100" >

        <TextView
            android:id="@+id/tv_table_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_gms_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100gms"
            android:visibility="visible" />
        

        <CheckBox
            android:id="@+id/checkBox2_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.38"
            android:button="@drawable/checkbox_selection"
            android:text="CheckBox"
            android:textColor="#FFFFFF" />
        
        <TextView
            android:id="@+id/tv_product_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="product"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_price_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_shadeno_stock_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="shadeno"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF"
            android:visibility="visible" />
    </TableRow>

   <TableRow
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="fill_vertical"
       android:visibility="visible"
       android:weightSum="100" >
       
        <TextView
            android:id="@+id/tv_ean_code_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="eancode"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_catid_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="catid"
            android:visibility="visible" />


        <TextView
            android:id="@+id/tv_db_id_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="db_id"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:visibility="visible" />

       
   </TableRow>

</LinearLayout>
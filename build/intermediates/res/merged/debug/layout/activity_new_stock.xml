<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0b5571"
    android:orientation="vertical" >

    <include
        android:id="@+id/include_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/headernew" />

    <TableLayout
        android:id="@+id/tl_spinerlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView android:id="@+id/txt_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="STOCK"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="italic"
                android:typeface="serif" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/label_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <Spinner
                android:id="@+id/sp_product_category"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/dropdown"
                android:prompt="@string/select_category" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/label_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Spinner
                android:id="@+id/sp_product_type"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/dropdown"
                android:prompt="@string/select_type" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView 
                android:id="@+id/txt_product_mode"
                style="@style/label_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mode" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <Spinner
                android:id="@+id/sp_product_mode"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/dropdown"
                android:textAlignment="center" />
        </TableRow>
    </TableLayout>
    
    <ScrollView  android:layout_width="match_parent"
        android:layout_height="150dp" android:layout_marginTop="20dp" android:layout_marginBottom="30dp">

    <TableLayout
        android:id="@+id/tl_productList"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:layout_marginTop="20dp" >

        <TableRow android:id="@+id/tr_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#F7DCB4"
            android:padding="3dp"
            android:weightSum="3" >

            <TextView
                style="@style/list_heading"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="left"
                android:text="PRODUCT" />

            <TextView
                style="@style/list_heading"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="MRP" />
        </TableRow>
    </TableLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_proceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/proceed"
        android:visibility="visible" />

</LinearLayout>
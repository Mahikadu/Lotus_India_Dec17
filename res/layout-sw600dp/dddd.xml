<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
   
    >
    
    <include layout="@layout/headernew"
       
       />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
      
        >

        <TableRow>

            <Button
                android:id="@+id/btn_atten"
                android:layout_gravity="center"
                android:layout_weight="1"
                
                android:background="@drawable/attendance_dd" />

            <TableLayout
                android:layout_weight="1">

                <TableRow>

                    <Button
                        android:id="@+id/btn_visibility"
                        android:layout_gravity="left"
                         
                        android:layout_weight="1"
                          android:background="@drawable/visibility_dd"/>
                </TableRow>

                <TableRow>

                    <Button
                        android:id="@+id/btn_stock"
                        android:layout_gravity="left"
                        
                        android:layout_weight="1" 
                          android:background="@drawable/stocks_dd"/>
                </TableRow>
            </TableLayout>
        </TableRow>
        <TableRow >
             <Button
                 android:id="@+id/btn_notifi"
                        android:layout_gravity="left"
                         
                        android:layout_weight="1"
                          android:background="@drawable/noti_dd"/>
             
              <Button
                  android:id="@+id/btn_tester"
                        android:layout_gravity="left"
                         
                        android:layout_weight="1"
                          android:background="@drawable/test_dd"/>
            
        </TableRow>
        
        <TableRow >
            
              <TableLayout
                android:layout_weight="1">

                <TableRow>

                    <Button
                        android:id="@+id/btn_report"
                        android:layout_gravity="left"
                         
                        android:layout_weight="1"
                          android:background="@drawable/reports_dd"/>
                </TableRow>

                <TableRow>

                    <Button
                        android:id="@+id/btn_master_sync"
                        android:layout_gravity="left"
                        
                        android:layout_weight="1" 
                          android:background="@drawable/master_dd"/>
                </TableRow>
            </TableLayout>
             <Button
                android:id="@+id/btn_ba_sale_yr"
                android:layout_gravity="center"
                android:layout_weight="1"
                
                android:background="@drawable/ba_out" />
              
        </TableRow>
       
        
    </TableLayout>
     <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
     
       
        >
        <TableRow >
         <Button
                android:id="@+id/btn_ba_sale_month_wise"
                android:layout_gravity="center"
            android:layout_weight="1"
                
                android:background="@drawable/ba_report_dd" />
         </TableRow>
        </TableLayout>

</LinearLayout>
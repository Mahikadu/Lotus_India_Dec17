<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="7dp" >

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100" >
            
            <CheckBox
                android:id="@+id/chk_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:visibility="visible"
                 />
             <TextView
                android:id="@+id/tv_product_listt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/italictext_product_list"
                android:layout_marginLeft="5dp"
                android:focusableInTouchMode="false"
                android:visibility="visible"
                 />
            
  			
            <TextView
                android:id="@+id/tv_table_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="false"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                 />

            <TextView
                android:id="@+id/tv_size_list"
                style="@style/italictext_product_list"
                android:layout_width="wrap_content"
                android:focusableInTouchMode="false"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_weight="10" 
                />

            <TextView
                android:id="@+id/tv_price_list"
                style="@style/italictext_product_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="false"
                android:layout_weight="10"
                android:gravity="right"
                android:textColor="#AA0078"
                android:visibility="gone" 
                />

            <TextView
                android:id="@+id/tv_eancode_list"
                style="@style/italictext_product_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="false"
                android:layout_weight="40"
                android:gravity="right"
                
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_category_list"
                style="@style/italictext_product_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:focusableInTouchMode="false"
                android:gravity="right" 
                
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_db_id_list"
                style="@style/italictext_product_list"
                android:layout_width="wrap_content"
                android:focusableInTouchMode="false"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </TableRow>
    </TableLayout>

</LinearLayout>